<div class="row">
<div class="medium-6 columns">
<h1>Add a serving</h1>
<%= form_for @serving do |f| %>
  <% if @serving.errors.any? %>
    <% for message in @serving.errors.full_messages %>
      <div class="alert-box alert round" role="alert">
        <%= message %>
      </div>
    <% end %>
  <% end %>


  <%= f.collection_select :meal_id, Meal.where(user_id: current_user.id),:id,:title, include_blank: true %>


    <%= f.label :day %>
    <%= f.date_field :day, class: "form-control" %>

  
    <%= f.label "avalability" %>
    <%= f.text_area :number, class: "form-control" %>

 
    <%= f.label :price %>
    <%= f.number_field :price, class: "form-control", step: 0.01 %>

    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control" %>

  <%= f.submit class: "button succes" %>

<% end %>
</div>
</div>
