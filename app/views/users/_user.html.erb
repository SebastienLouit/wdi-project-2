  <article class="website-example row wide spacer">
    <div class="large-6 columns">
      <div class="row">
        <div class="small-8 columns">
          <img src="<%= user.photo %>" alt="Member photo">
        </div>
      </div>
    </div>
    <div class="large-6 columns">
      <h3><%= user.name %></h3>
      <p><%= user.location %></p>
      <h6><%= user.description %></h6>
      <div class="button text-transform">
          <%= link_to 'More info', user_path(user.id) %>
      </div>

      <% if current_user == user %>
        <div class="button text-transform">
          <%= link_to 'Edit profile', edit_user_path(user.id) %>
        </div>
      <% end %> 
    </div>
  </article>
